@model List<PizzaViewModel>

@{
    ViewData["Title"] = "Index";

    var PaginationPartial = new PaginationViewModel() { CurrentPage = ViewBag.CurrentPage, ItemsCount = (int)ViewBag.ItemsCount };
}

<h2>Index</h2>

@Html.Partial("_PaginationPartial", PaginationPartial)

<div class="row pizzas">
    @foreach (var pizzaVM in Model)
    {
        <div class="col-md-4">

            <div class="thumbnail">
                <img src="~/images/@pizzaVM.Pizza.Image" alt="...">
                <div class="caption">
                    <h3>@pizzaVM.Pizza.Title</h3>
                    <p>@pizzaVM.Pizza.Description</p>
                    <p>@pizzaVM.PriceTTC()</p>
                    <p>
                        <a asp-controller="Cart" asp-action="AddToCar" asp-route-id="@pizzaVM.Pizza.IDPizza" class="btn btn-primary" role="button">Commander</a>
                        <a data-id="@pizzaVM.Pizza.IDPizza" class="btn btn-primary detail" role="button">Details</a>
                    </p>
                </div>
            </div>
        </div>
    }
</div>
@Html.Partial("_PaginationPartial", PaginationPartial)

<div class="container-modal"></div>

@section Scripts{
<script src="~/js/pizza-controller.js"></script>
 }
