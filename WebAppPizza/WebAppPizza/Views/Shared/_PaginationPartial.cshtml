@model PaginationViewModel;

@if (Model.ItemsCount > 1)
{
    <div class="row">
        <nav aria-label="Page navigation">
            <ul class="pagination">
                @for (int i = 1; i <= Model.ItemsCount; i++)
                {
                    <li class="@(Model.CurrentPage ==1 ?"active" : String.Empty)"><a asp-route-page="@i">@i</a></li>
                }
            </ul>
        </nav>
    </div>
}
